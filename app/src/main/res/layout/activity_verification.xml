<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/l1"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:weightSum="11"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>


    <TextView
        android:layout_marginHorizontal="15dp"

        android:layout_gravity="center"
        android:text="Enter the code to verify your account."
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="3sp"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"/>
    <TextView
        android:layout_marginHorizontal="15dp"

        android:layout_gravity="center"
        android:layout_marginVertical="5dp"
        android:text="We have sent an SMS with  a code to the\nnumber +92xxxxxxxxxx"
        android:autoSizeMaxTextSize="15sp"
        android:autoSizeMinTextSize="3sp"
        android:autoSizeTextType="uniform"
        android:textColor="@android:color/black"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>



    <View
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"/>


    <LinearLayout
        android:layout_marginHorizontal="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:weightSum=".6"
        android:background="@android:color/transparent">


        <EditText
            android:inputType="numberPassword"
            android:layout_marginHorizontal="5dp"
            android:id="@+id/eone"
            android:elevation="2dp"
            android:maxLength="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:hint="*"
            android:textColor="@android:color/black"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="uniform"
            android:textStyle="bold"
            />


        <EditText
            android:id="@+id/etwo"
            android:inputType="numberPassword"
            android:layout_marginHorizontal="5dp"
            android:elevation="2dp"
            android:maxLength="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:hint="*"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="uniform"
            android:textStyle="bold"
            android:gravity="center_horizontal" />



        <EditText
            android:inputType="numberPassword"
            android:layout_marginHorizontal="5dp"
            android:id="@+id/ethree"
            android:elevation="2dp"
            android:maxLength="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:hint="*"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="uniform"
            android:textStyle="bold"
            android:gravity="center_horizontal" />



        <EditText
            android:inputType="numberPassword"
            android:id="@+id/efour"
            android:layout_marginHorizontal="5dp"
            android:elevation="2dp"
            android:layout_width="0dp"
            android:maxLength="1"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:hint="*"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="uniform"
            android:textStyle="bold"
            android:gravity="center_horizontal" />



        <EditText
            android:inputType="numberPassword"
            android:id="@+id/efive"
            android:elevation="2dp"
            android:layout_marginHorizontal="5dp"
            android:layout_width="0dp"
            android:maxLength="1"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:hint="*"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="uniform"
            android:textStyle="bold"
            android:gravity="center_horizontal" />



        <EditText
            android:inputType="numberPassword"
            android:layout_marginHorizontal="5dp"
            android:id="@+id/esix"
            android:elevation="2dp"
            android:maxLength="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:hint="*"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="uniform"
            android:textStyle="bold"
            android:gravity="center_horizontal" />



    </LinearLayout>


    <View
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"/>



    <Button
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:background="@drawable/drawerback"

        android:textStyle="normal"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:text="Verify"
        android:clickable="true"
        android:id="@+id/verifybtn"

        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="3sp"
        android:autoSizeTextType="uniform"
        tools:ignore="NestedWeights" />




    <View
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"/>

    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Send a new code"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="3sp"
        android:autoSizeTextType="uniform"
        android:textColor="@android:color/white"
android:gravity="center"
        android:background="@drawable/drawerbg2"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="100dp"
        android:layout_height="0dp"
        android:layout_weight=".5"/>
</LinearLayout>