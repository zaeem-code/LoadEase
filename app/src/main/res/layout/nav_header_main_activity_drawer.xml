<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="@drawable/drawerbg1"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:background="@drawable/drawerback"
        android:weightSum="6"
        android:orientation="vertical">

<ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/ic_baseline_arrow_back_24"
    app:tint="@color/black"
    android:id="@+id/backdrawe"
    android:background="@drawable/backbg"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"

    android:layout_margin="17dp"
    android:layout_alignParentEnd="true" />
<FrameLayout
    android:layout_centerVertical="true"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginStart="50dp"
    android:id="@+id/dpcontainer"
    android:layout_marginLeft="50dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:background="@android:color/white"
                android:src="@drawable/ic_launcher_foreground"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>

    <ImageView
        android:id="@+id/adddp"
        android:layout_width="20dp"
        android:layout_height="20dp"

        android:layout_gravity="right|bottom"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/backbg"
        android:src="@drawable/ic_baseline_add_circle_outline_24"
        app:tint="@color/black" />




</FrameLayout>
           <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"

            android:text="Mr. Arslan"
            android:gravity="center_vertical|left"
            android:textSize="23dp"
               android:layout_toEndOf="@+id/dpcontainer"
            android:textStyle="bold"
               android:layout_marginTop="40dp"
               android:layout_marginLeft="15dp"
            android:textColor="@android:color/white"
            android:id="@+id/namedrader"
               android:layout_toRightOf="@+id/dpcontainer"
               android:layout_marginStart="15dp" />  <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"

            android:text="Rating 4.75"
            android:gravity="center_vertical|left|top"
            android:textSize="17sp"
            android:layout_toEndOf="@+id/dpcontainer"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textColor="@android:color/white"
            android:layout_below="@+id/namedrader"
            android:id="@+id/rated"
            android:layout_toRightOf="@+id/dpcontainer"
            android:layout_marginStart="15dp"
            tools:ignore="RtlHardcoded" />
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2.3">
    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"

      >


        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_marginEnd="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"

            android:id= "@+id/themseslyt"
            tools:ignore="NestedWeights"
            android:layout_marginRight="50dp">

            <ImageView
                android:background="@android:color/transparent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_width="50dp"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_marginVertical="1dp"
                android:layout_height="match_parent"
                android:id="@+id/rides"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp" />
            <TextView
                android:layout_width="match_parent"
                android:background="@android:color/transparent"

                android:textColor="@color/black"
                android:id="@+id/themetxt"
                android:layout_height="match_parent"
                 android:textSize="17sp"
                android:layout_toRightOf="@id/rides"
                android:layout_marginLeft="12dp"
                android:gravity="left|center_vertical"


                tools:ignore="RtlHardcoded"
                android:text="Your Rides "
                tools:targetApi="o" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginEnd="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"

            android:id= "@+id/settinglyt"
            android:layout_marginRight="50dp">

            <ImageView
                android:background="@android:color/transparent"
                android:layout_alignParentStart="true"

                android:layout_marginStart="15dp"
                android:layout_width="50dp"
                android:layout_marginVertical="1dp"
                android:layout_height="match_parent"
                android:id="@+id/notificatio"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/settingtxt"

                android:textColor="@color/black"
                android:layout_width="241dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/notificatio"
                android:textSize="17sp"
                android:background="@android:color/transparent"
                android:gravity="left|center_vertical"

                tools:ignore="RtlHardcoded"
                android:text="Notification"
                tools:targetApi="o" />
        </RelativeLayout >




        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginEnd="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:id= "@+id/sharelyt"
            android:layout_marginRight="50dp">

            <ImageView
                android:id="@+id/shareimg"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"

                android:layout_marginStart="15dp"
                android:background="@android:color/transparent"
               android:focusable="true"   android:clickable="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher_foreground"

                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"

                android:textColor="@android:color/black"
                android:id="@+id/wallet"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:layout_toRightOf="@id/shareimg"
                android:layout_marginLeft="12dp"
                android:gravity="left|center_vertical"

                tools:ignore="RtlHardcoded"
                android:text="Wallet"
                tools:targetApi="o" />


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:minWidth="75dp"
                android:layout_height="wrap_content"
                android:minHeight="25dp"
                app:cardCornerRadius="12dp"

                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                app:cardElevation="5dp"
                android:elevation="5dp"
                app:cardBackgroundColor="@android:color/holo_blue_dark"
                android:layout_toEndOf="@id/wallet"
                android:layout_toRightOf="@id/wallet"
                android:layout_marginStart="50dp">
                <TextView
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:layout_gravity="center"

                    android:text="1234.56"
                    android:textColor="@android:color/white"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginEnd="50dp"

            android:layout_height="50dp"
            android:background="@android:color/transparent"

            android:id= "@+id/ratelyt"
            android:layout_marginRight="50dp">

            <ImageView
                android:id="@+id/settings"
                android:layout_width="51dp"
                android:layout_height="match_parent"

                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:src="@drawable/ic_launcher_foreground" />
            <TextView
                android:layout_width="match_parent"

                android:textColor="@android:color/black"
                android:background="@android:color/transparent"
                android:id="@+id/ratetxt"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:layout_marginLeft="12dp"

                android:layout_toRightOf="@id/settings"
                android:gravity="left|center_vertical"

                tools:ignore="RtlHardcoded"
                android:text="Setting"
                tools:targetApi="o" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginEnd="50dp"

            android:layout_height="50dp"
            android:background="@android:color/transparent"

            android:id= "@+id/helpl"
            android:layout_marginRight="50dp">

            <ImageView
                android:focusable="true"
                android:clickable="true"
                android:background="@android:color/transparent"
                android:layout_alignParentStart="true"

                android:layout_marginStart="15dp"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:id="@+id/hlp"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp" />
            <TextView
                android:layout_width="match_parent"

                android:textColor="@android:color/black"
                android:background="@android:color/transparent"
                android:id="@+id/helpp"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:layout_toRightOf="@id/hlp"
                android:layout_marginLeft="12dp"
                android:gravity="left|center_vertical"

                android:text="Help"
                tools:ignore="RtlHardcoded"
                tools:targetApi="o" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginEnd="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"

            android:id= "@+id/abtlyt"
            android:layout_marginRight="50dp">

            <ImageView
                android:focusable="true"
                android:clickable="true"
                android:background="@android:color/transparent"
                android:layout_alignParentStart="true"

                android:layout_marginStart="15dp"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:id="@+id/addride"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp" />
            <TextView
                android:layout_width="match_parent"

                android:textColor="@android:color/black"
                android:background="@android:color/transparent"
                android:id="@+id/adridee"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:layout_toRightOf="@id/addride"
                android:layout_marginLeft="12dp"
                android:gravity="left|center_vertical"

                tools:ignore="RtlHardcoded"
                android:text="Add Ride"
                tools:targetApi="o" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginEnd="50dp"

            android:layout_height="50dp"
            android:background="@android:color/transparent"

            android:id= "@+id/helplyt"
            android:layout_marginRight="50dp">

            <ImageView
                android:focusable="true"
                android:clickable="true"
                android:background="@android:color/transparent"
                android:layout_alignParentStart="true"

                android:layout_marginStart="15dp"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:id="@+id/helpimg"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp" />
            <TextView
                android:layout_width="match_parent"

                android:textColor="@android:color/black"
                android:background="@android:color/transparent"
                android:id="@+id/helptxt"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/helpimg"
                android:layout_marginLeft="12dp"
                android:gravity="left|center_vertical"
android:textSize="17sp"
                tools:ignore="RtlHardcoded"
                android:text="Get a discount"
                tools:targetApi="o" />
        </RelativeLayout>




<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="25sp"
    android:layout_gravity="bottom"
    android:layout_marginTop="60dp"
    android:gravity="center"
    android:textColor="@color/design_default_color_primary_variant"
    android:text="Want to Earn Extra? Join us!"
    android:layout_margin="7dp"
    android:id="@+id/joinus"/>
    </LinearLayout>

</ScrollView>
</LinearLayout>