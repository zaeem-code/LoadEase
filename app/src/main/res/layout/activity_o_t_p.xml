<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="@drawable/bg_signup">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_weight="0.25"
        android:layout_marginStart="20dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_weight="0.5"
        android:layout_marginStart="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify your Phone Number"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.7"
        android:weightSum="7"
        android:paddingLeft="10dp"
        android:background="@drawable/cardview_background"
        android:orientation="vertical"
        android:paddingStart="10dp"
        tools:ignore="RtlSymmetry">


        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:layout_marginHorizontal="8dp"
            tools:ignore="NestedWeights" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="what's the code"
                android:textSize="23sp"
                android:textColor="@color/lightgray"
                android:textStyle="bold"
                android:layout_gravity="center"/>


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="horizontal"
            android:weightSum="3">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.075"
                tools:ignore="NestedWeights" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1.3">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter the sent to"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textColor="@color/hint_color"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center">

                <TextView
                    android:id="@+id/get_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+92 322 1234564"
                    android:lines="1"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@color/hint_color"/>



            </LinearLayout>




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="horizontal">


        <EditText
            android:id="@+id/edone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLength="1"
            android:textColor="@color/lightgray"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:backgroundTint="@color/ed_color"
            tools:targetApi="lollipop" />

            <EditText
                android:id="@+id/edtwo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="1"
                android:textColor="@color/lightgray"
                android:backgroundTint="@color/ed_color"
                tools:targetApi="lollipop"
                android:layout_gravity="bottom"
                />
            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/edthree"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="1"
                android:gravity="center"
                android:textColor="@color/lightgray"
                android:backgroundTint="@color/ed_color"
                tools:targetApi="lollipop"
                android:layout_gravity="bottom"
                />
            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/ed_color"
                tools:targetApi="lollipop"
                android:gravity="center"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="1"
                android:textColor="@color/lightgray"
                android:layout_gravity="bottom"
                android:id="@+id/edfour"
                />
            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/ed_color"
                tools:targetApi="lollipop"
                android:gravity="center"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="1"
                android:textColor="@color/lightgray"
                android:id="@+id/edfive"
                android:layout_gravity="bottom"
                />
            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="1"
                android:textColor="@color/lightgray"
                android:backgroundTint="@color/ed_color"
                tools:targetApi="lollipop"
                android:id="@+id/edsix"
                android:layout_gravity="bottom"
                />

</LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="horizontal"
            android:weightSum="3">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                tools:ignore="NestedWeights" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1.8">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/don_t_have_an_account"
                    android:gravity="center"
                    android:textSize="15sp"

                    android:textColor="@color/lightgray"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center">

                <TextView
                    android:id="@+id/sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/lightgray"/>



            </LinearLayout>




        </LinearLayout>




            <ProgressBar
                android:id="@+id/otp_progressbar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_gravity="center"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.4"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/verify"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="60dp"
        android:gravity="center"
        android:background="@drawable/background_card_view"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Verify"
            android:textStyle="bold"
            android:textSize="23sp"/>

    </LinearLayout>

</LinearLayout>



        </LinearLayout>

    </LinearLayout>





