
<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/x"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <fragment

                    android:id="@+id/map"

                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".Main_Activity_includingmaps" />



                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:id="@+id/tool"
                    android:background="@android:color/transparent"
                    android:layout_height="40dp"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/locfloat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/offwhite"

                    android:scaleType="center"
                    android:elevation="8dp"
                    android:clickable="true"

                    app:srcCompat="@drawable/ic_baseline_my_location_24"
                    tools:ignore="VectorDrawableCompat"
                    android:focusable="true"
                    tools:targetApi="lollipop"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="20dp"
                    android:contentDescription="@string/_1050_00" />
<androidx.cardview.widget.CardView
    app:cardBackgroundColor="@color/offwhite"
    app:cardElevation="10dp"
    android:id="@+id/c1"
    android:layout_marginTop="50dp"
    app:cardCornerRadius="20dp"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginHorizontal="20dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"  >

    <View
        android:id="@+id/v1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/black" />
    <TextView
        android:layout_toEndOf="@+id/v1"
        android:background="@android:color/transparent"
        android:hint="Your Location"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/v1" />
</RelativeLayout>
</androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@color/offwhite"
                    app:cardElevation="10dp"
                    android:layout_marginTop="100dp"
                    app:cardCornerRadius="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"  >
                        <View
                            android:layout_width="20dp"
                            android:layout_centerVertical="true"
                            android:id="@+id/v2"
                            android:layout_margin="5dp"
                            android:background="@color/black"
                            android:layout_height="20dp"/>
                        <EditText
                            android:layout_toEndOf="@+id/v2"
                            android:background="@android:color/transparent"
                            android:hint="Drop off Location"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/v2" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </FrameLayout>
    </com.google.android.material.appbar.AppBarLayout>
